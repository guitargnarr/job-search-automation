# Job Search Automation Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=sqlite+aiosqlite:///./job_search.db
# For PostgreSQL: postgresql+asyncpg://user:pass@localhost/dbname

# Gmail API (REQUIRED for email automation)
GMAIL_CREDENTIALS_FILE=/path/to/gmail_credentials.json
GMAIL_TOKEN_FILE=/path/to/token.pickle
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.modify

# LinkedIn (REQUIRED for networking automation)
LINKEDIN_EMAIL=your-email@gmail.com
LINKEDIN_PASSWORD=your-password
LINKEDIN_HEADLESS=true
LINKEDIN_SLOW_MO=1000

# OpenAI API (OPTIONAL for AI features)
OPENAI_API_KEY=sk-...

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=1

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring (OPTIONAL)
SENTRY_DSN=
ENABLE_METRICS=false

# Email Settings (for sending follow-ups)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# Feature Flags
ENABLE_EMAIL_SCANNING=true
ENABLE_LINKEDIN_AUTOMATION=true
ENABLE_ATS_OPTIMIZATION=true
ENABLE_AUTO_FOLLOWUPS=true

# Performance
ASYNC_POOL_SIZE=20
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Paths
RESUME_STORAGE_PATH=./storage/resumes
COVER_LETTER_PATH=./storage/cover_letters
TEMP_PATH=./tmp